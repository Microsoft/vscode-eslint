{
	"name": "vscode-eslint",
	"displayName": "ESLint",
	"description": "Integrates ESLint into VS Code.",
	"version": "0.10.16",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-eslint.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-eslint/issues"
	},
	"publisher": "dbaeumer",
	"icon": "eslint_icon.svg",
	"categories": [
		"Linters"
	],
	"engines": {
		"vscode": "^0.10.8"
	},
	"activationEvents": [
		"onLanguage:flow",
		"onLanguage:html",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onCommand:eslint.executeAutofix"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ESLint configuration",
			"properties": {
				"eslint.enable": {
					"type": "boolean",
					"default": true,
					"description": "Control whether eslint is enabled for JavaScript files or not."
				},
				"eslint.enableJavaScript": {
					"type": "boolean",
					"default": true,
					"description": "Control whether eslint is enabled for JavaScript files or not."
				},
				"eslint.enableHtml": {
					"type": "boolean",
					"default": false,
					"description": "Control whether eslint is enabled for HTML files or not."
				},
				"eslint.enableFlow": {
					"type": "boolean",
					"default": false,
					"description": "Control whether eslint is enabled for JavaScript files with Flow or not."
				},
				"eslint.enableTypeScript": {
					"type": "boolean",
					"default": false,
					"description": "Control whether eslint is enabled for TypeScript files or not. Requires parser (https://github.com/eslint/typescript-eslint-parser)."
				},
				"eslint.options": {
					"type": "object",
					"default": {},
					"description": "The eslint options object to provide args to the eslint command."
				},
				"eslint.trace.server": {
					"type": "string",
					"enum": ["off", "messages", "verbose"],
					"default": "off",
					"description": "Traces the communication between VSCode and the eslint linter service."
				}
			}
		},
		"commands": [
			{
				"title": "Fix all auto-fixable problems",
				"category": "ESLint",
				"command": "eslint.fixAllProblems"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": ".eslintrc",
				"url": "http://json.schemastore.org/eslintrc"
			},
			{
				"fileMatch": ".eslintrc.json",
				"url": "http://json.schemastore.org/eslintrc"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run update-vscode && cd ../eslint-server && npm run compile && cd ../eslint && tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^0.11.10",
		"typescript": "^1.8.9"
	},
	"dependencies": {
		"vscode-languageclient": "^2.2.0"
	}
}